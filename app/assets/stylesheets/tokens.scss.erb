/* SPINNING OBJECTS */
/*----------------------------*/

@keyframes brightness {
  0%,
  50%,
  100% {
    filter: blur(0px) brightness(120%)
      drop-shadow(0 0 2.5px rgba(255, 255, 255, 0.1))
      drop-shadow(0 0 5px rgba(255, 255, 255, 0.075))
      drop-shadow(0 0 7.5px rgba(255, 255, 255, 0.045))
      drop-shadow(0 0 10px rgba(255, 255, 255, 0.025));
  }
  25%,
  75% {
    filter: blur(1px) brightness(50%)
      drop-shadow(0 0 2.5px rgba(255, 255, 255, 0.1))
      drop-shadow(0 0 5px rgba(255, 255, 255, 0.075))
      drop-shadow(0 0 7.5px rgba(255, 255, 255, 0.045))
      drop-shadow(0 0 10px rgba(255, 255, 255, 0.025));
  }
}
// speed of a coin
@keyframes spin {
  0% {
    transform: rotateY(-180deg);
  }
  100% {
    transform: rotateY(180deg);
  }
}
@keyframes shadow {
  0%,99% {
    filter: drop-shadow();
  }
  100% {
    filter: var(--dropshadow-sharp);
  }
}
.spinningasset {
  text-align: left;
  transition: all 0.4s ease-out;
  // cursor: pointer;
  // animation: brightness 2.5s linear;// infinite;
  animation: brightness 2.5s linear infinite;
  &::after {
    content: "";
    position: absolute;
    z-index: 1;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    border-radius: 8px;
    width: 11px;
    margin: auto;
    background-size: 100px 400%;
    background-position: center;
  }
  > div {
    position: relative;
    z-index: 2;
    perspective: 10000px;
    transform-style: preserve-3d;
    transform-origin: center;
    // animation: spin 5s linear;// infinite;
    animation: spin 5s linear infinite;
    > * {
      width: 100%;
      height: 100%;
      position: absolute;
      backface-visibility: inherit;
      background-size: cover;
    }

    > div:first-child {
      transform: translateZ(-6px);
    }
    > div:last-child {
      transform: translateZ(6px);
      background-image: var(--logo-token-svg-back);
    }
    em {
      filter: blur(0.5px);
      &:first-of-type {
        transform: translateZ(0px) rotateY(-6deg);
      }
      &:last-of-type {
        transform: translateZ(0px) rotateY(6deg);
      }
    }
    i {
      filter: blur(0.5px);
      &:nth-of-type(1) {
        transform: translateZ(-5px);
      }
      &:nth-of-type(2) {
        transform: translateZ(-4px);
      }
      &:nth-of-type(3) {
        transform: translateZ(-3px);
      }
      &:nth-of-type(4) {
        transform: translateZ(-2px);
      }
      &:nth-of-type(5) {
        transform: translateZ(-1px);
      }
      &:nth-of-type(6) {
        transform: translateZ(0px);
      }
      &:nth-of-type(7) {
        transform: translateZ(1px);
      }
      &:nth-of-type(8) {
        transform: translateZ(2px);
      }
      &:nth-of-type(9) {
        transform: translateZ(3px);
      }
      &:nth-of-type(10) {
        transform: translateZ(4px);
      }
      &:nth-of-type(11) {
        transform: translateZ(5px);
      }
    }
  }

  &.is-sm {
    // width:var(--coin-sm-width);
    // height: calc(var(--coin-sm-width)/0.85);
    transform: scale(0.75);
    transform-origin: left top;
    filter: none;
    &,
    > div {
      margin:0.75rem 1rem;
    }
  }

  &.coin {
    > div {
      --coin-width: var(--logo-width);
      width:var(--coin-width);
      height: calc(var(--coin-width)/0.85);
      // box-shadow:var(--shadow-sharp);

      > div:first-child {
        background-image: var(--logo-token-svg-back);//url(<%= asset_path 'U3TokenB.svg' %>);
      }
      > div:last-child,
      &::after,
      i,
      em {
        background-image: var(--logo-token-svg);//url(<%= asset_path 'U3Token.svg' %>);
      }
    }
  }
  &.award {
    > div {
      // --token-width: 200px;
      width:var(--award-width);
      height: calc(var(--award-width)/6*7);
      > div:first-child {
        background-image: url(<%= asset_path 'awards/design2.gif' %>);
      }
      > div:last-child,
      &::after,
      i,
      em {
        background-image: url(<%= asset_path 'awards/design2.gif' %>);
      }
    }
  }
  &.programs {
    > div {
      // --token-width: 200px;
      width: var(--coin-width);
      height:calc(var(--coin-width)*1.18);
      > div:first-child {
        background-image: url(<%= asset_path 'ProgramsToken3.png' %>);
      }
      > div:last-child,
      &::after,
      i,
      em {
        background-image: url(<%= asset_path 'ProgramsToken3.png' %>);
      }
    }
  }
  &.disruptors {
    > div {
      // --token-width: 200px;
      width: var(--disruptors-token-width);
      height:calc(var(--disruptors-token-width)*1.19);
      > div:first-child {
        background-image: url(<%= asset_path 'DisruptorsTokenDraftJ.svg' %>);
      }
      > div:last-child,
      &::after,
      i,
      em {
        background-image: url(<%= asset_path 'DisruptorsTokenDraftJ.svg' %>);
      }
    }
    &.is-sm {
      // transform: scale(0.2) translateY(-33%);
    }
  }
  &.about {
      filter: var(--dropshadow-sharp);//drop-shadow(0 0 3px rgba(236, 121, 254, 0.3))
        // drop-shadow(0 0 6px rgba(236, 121, 254, 0.2))
        // drop-shadow(0 0 20px rgba(236, 121, 254, 0.1))
        // drop-shadow(0 0 30px rgba(236, 121, 254, 0.05));
      &:hover {
        filter: drop-shadow(0 0 3px rgba(236, 121, 254, 0.8))
          drop-shadow(0 0 6px rgba(236, 121, 254, 0.6))
          drop-shadow(0 0 20px rgba(236, 121, 254, 0.4))
          drop-shadow(0 0 30px rgba(236, 121, 254, 0.2));
      }
      > div {
        --coin-width: 10vw;
        width: var(--coin-width);//140px;
        height: calc(var(--coin-width)/0.85);
        margin: 0 auto 1rem ;//var(--programs-token-m);//
        > div:first-child {
          background-image: url(<%= asset_path 'Token10.svg' %>);
        }
        > div:last-child,
        &::after,
        i,
        em {
          background-image: url(<%= asset_path 'Token10.svg' %>);
        }
      }
      &.is-sm {
        // transform: scale(0.25);
        // margin:0;
      }
    }
}
